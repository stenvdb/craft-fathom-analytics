{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("stenvdb\\fathomanalytics\\assetbundles\\fathomanalytics\\FathomAnalyticsAsset") %}

{% set reportOptions = [
  { label: 'visitors'|t('fathom-analytics')|ucwords, value: 'Visitors' },
  { label: 'pageviews'|t('fathom-analytics')|ucwords, value: 'Pageviews' },
  { label: 'sessions'|t('fathom-analytics')|ucwords, value: 'Sessions' },
  { label: 'bounce rate'|t('fathom-analytics')|ucwords, value: 'BounceRate' },
] %}

{{ forms.selectField({
  label: 'report'|t('fathom-analytics')|ucwords,
  name: 'report',
  options: reportOptions,
  value: settings.report,
}) }}

{% set periodOptions = [
  { label: 'week'|t('fathom-analytics')|ucwords, value: 'week' },
  { label: 'month'|t('fathom-analytics')|ucwords, value: 'month' },
  { label: 'year'|t('fathom-analytics')|ucwords, value: 'year' }
] %}

{{ forms.selectField({
  label: 'period'|t('fathom-analytics')|ucwords,
  name: 'period',
  options: periodOptions,
  value: settings.period,
}) }}

{% set chartOptions = [
  { label: 'line chart'|t('fathom-analytics')|ucwords, value: 'line' },
  { label: 'bar chart'|t('fathom-analytics')|ucwords, value: 'bar' },
] %}

{{ forms.selectField({
  label: 'chart type'|t('fathom-analytics')|ucwords,
  name: 'chart',
  options: chartOptions,
  value: settings.chart,
}) }}
