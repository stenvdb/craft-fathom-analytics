{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("stenvdb\\fathomanalytics\\assetbundles\\fathomanalytics\\FathomAnalyticsAsset") %}

{% set periodOptions = [
  { label: 'week'|t('fathom-analytics')|ucwords, value: 'week' },
  { label: 'month'|t('fathom-analytics')|ucwords, value: 'month' },
  { label: 'year'|t('fathom-analytics')|ucwords, value: 'year' }
] %}

{{ forms.selectField({
  label: 'period'|t('fathom-analytics')|ucwords,
  name: 'period',
  options: periodOptions,
  value: settings.period,
}) }}
